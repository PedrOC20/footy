<% if user_signed_in? %>
  <%= render "/shared/navbar" %>
<% else %>
  <%= link_to "LOG IN", new_user_session_path, class: "log-in-btn", id: "homepage-log-in-btn" %>
<% end %>

<div class="show-nav">
  <%= link_to "javascript:history.back()", class:"link-home" do %>
    <i class="fas fa-chevron-left"></i>
  <% end %>
  <a id="a-ex"href="#map">Location</a>
  <p>|</p>
  <a href="#details-title">Details</a>
  <p>|</p>
  <a href="#field-img">Description</a>
  <p>|</p>
  <a id="a-ex"href="#reviews">Reviews</a>
</div>

<div class="field-name-show-group">
  <h2><%= @group.field.name %></h2>
</div>

<div class="container back-transp-black">
  <div class="field-img-show-group">
    <%= cl_image_tag(@group.field.photo) %>
  </div>
  <div class="row">
    <div class="col-12">
      <p style="font-weight: bold">Location:</p>
      <div
        id="map"
        style="width: 100%;
        height: 300px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
      <h3 class="text-center"><%= @group.field.location %></h2>
    </div>
  </div>
</div>

<!-- if user is not alreay a group member of that group -->

<%# if @group.group_members.includes?(current_user) %>


<% if @group.users.include?(current_user) %>
<p>You are already in this group</p>
<% else %>
<%= link_to "Join Group", join_group_path(@group), method: "POST", data: { confirm: "Are you sure you want to join this group?"}  %>
<% end %>

<% @group.group_members.each do |review| %>
  <% if review.field_review_rating.present? %>
    <p>Rating: <%= review.field_review_rating %></p>
    <p>Description: <%= review.field_review_description %></p>
  <% end %>
<% end %>
