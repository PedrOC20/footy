<div class="home-background">

  <% if user_signed_in? %>
    <%= render "/shared/navbar" %>
  <% else %>
    <%= link_to "LOG IN", new_user_session_path, class: "log-in-btn", id: "homepage-log-in-btn" %>
  <% end %>

  <h1 id="footy-homepage" >FOOTY</h1>
  <h3 id="value-prop">Meet new People.<br>Play Football.</h3>
  <p id="search-phrase">Search for a field, a time, and play!</p>


  <%= simple_form_for :search, url: fields_path, method: "GET" do |f| %>
      <%= f.input :location, value: params[:search], placeholder: "Location"%>
      <%= f.input :date, as: :date, html5: true, value: params[:search], placeholder: "Day"%>
      <%= f.input :start_time, as: :time, html5: true, value: params[:search], placeholder: "Start Time" %>
      <%= f.input :end_time, as: :time, html5: true, value: params[:search], placeholder: "End Time" %>
      <p id="submit-wrapper"><%= f.submit "Go!", class: "solid-btn", id: "go-solid-btn-homepage" %></p>
  <% end  %>

  <%= link_to "Sign Up!", new_user_registration_path, class: "sign-up-btn", id: "homepage-sign-up-btn" %>
</div>
