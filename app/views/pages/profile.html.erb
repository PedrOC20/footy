<%= render "/shared/navbar" %>
<div style="padding-top: 120px; padding-bottom: 20px;">
  <h2 class="text-center">MY PROFILE</h2>
</div>

<div class="back-transp-black my-profile-container">
  <div class="container profile mb-3">
    <div class="row justify-content-center image-my-profile">
      <%= cl_image_tag current_user.avatar.url, class: "lg-avatar" %>
    </div>
    <div class="row justify-content-center">
      <div class="col-12 my-profile-info">
        <% if current_user.username.nil? %>
          <h3><%= current_user.first_name %> <%= current_user.last_name %></h3>
        <% else %>
          <h3><%= current_user.username %></h3>
        <% end %>
      </div>
    </div>
    <div class="row pt-3">
      <div class="col-12">
        <ul class="profile-list mb-0">
          <li class="d-flex">
            <i class="fas fa-address-card grey pr-2"></i> <p><%= current_user.first_name %> <%= current_user.last_name %></p>
          </li>
          <li class="d-flex">
            <i class="fas fa-envelope grey pr-2" style="font-size: 27px"></i><p style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis;"><%= current_user.email %></p>
          </li>
          <li class="row">
            <% if !current_user.position.nil? %>
              <div class="col-6">
                <p><i class="far fa-futbol grey pr-2" style="font-size: 27px"></i><%= current_user.position %></p>
              </div>
            <% end %>
            <% if !current_user.foot.nil? %>
              <div class="col-6 text-center">
                <p><i class="fas fa-socks grey pr-2" style="font-size: 27px"></i><%= current_user.foot %></p>
              </div>
            <% end %>
          </li>
          <% if current_user.role == "Player" %>
            <li class="d-flex justify-content-center">
              <%= link_to "My Bookings", my_bookings_path, class: "underline" %>
            </li>
            <li id="field_icon" class="d-flex justify-content-center">
              <div class="d-flex" style="position: relative">
                <%= image_tag("field_icon.png") %>
                <% if current_user.position == "Goalkeeper" %>
                  <div class="d-flex position-absolute position-gk">
                    <p class="position-text">GK</p>
                    <i class="fas fa-running"></i>
                  </div>
                <% elsif current_user.position == "Defense" %>
                  <div class="d-flex position-absolute position-de">
                    <p class="position-text">DE</p>
                    <i class="fas fa-running"></i>
                <% elsif current_user.position == "Midfielder" %>
                  <div class="d-flex position-absolute position-md">
                    <p class="position-text">MD</p>
                    <i class="fas fa-running position-md"></i>
                  </div>
                <% elsif current_user.position == "Forward" %>
                  <div class="d-flex position-absolute position-fw">
                    <p class="position-text">FW</p>
                    <i class="fas fa-running position-fw"></i>
                  </div>
                <% end %>
              </div>
            </li>
          <% else %>
            <li class="d-flex justify-content-center">
              <%= link_to "My Fields", fields_path, class: "underline mb-3" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="row justify-content-center">
      <%= link_to "EDIT MY PROFILE", edit_user_registration_path, class: "mb-3 solid-btn edit-profile-btn" %>
    </div>
  </div>
</div>

