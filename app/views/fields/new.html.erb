<%= render "/shared/navbar" %>
<div style="padding-top: 100px; padding-bottom: 10px;">
  <h2 class="text-center">ADD NEW FIELD</h2>
</div>


<div class="container">
  <div class="row mb-3">
    <div class="col-10 offset-1">
      <%= simple_form_for @field do |f| %>
        <%= f.error_notification %>
          <%= f.input :name,
                      required: true,
                      autofocus: true %>
          <%= f.input :location,
                      required: true %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :description,
                      required: true %>
          <%= f.input :field_size, as: :select,
                      collection: [3, 5, 7, 11],
                      required: true %>
          <%= f.input :field_type, as: :select,
                      collection: ["Grass", "Synthetic", "Concrete", "Wood", "Sand"],
                      required: true %>
          <%= f.input :locker_room, as: :select,
                      # collection: Field.locker_room.keys.to_a,
                      required: true %>
          <%= f.input :indoor, as: :select,
                      # collection: Field.indoor.keys.to_a,
                      required: true %>
          <%= f.input :parking, as: :select,
                      # collection: Field.parking.keys.to_a,
                      required: true %>
          <p id="submit-wrapper"><%= f.button :submit, "Add Field", class: "solid-btn smaller", id: "go-solid-btn-homepage", style: "color: black" %></p>
      <% end %>
    </div>
  </div>
</div>
