<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <%= simple_form_for :search, url: groups_path, method: "GET" do |f| %>
        <%= f.input :location, autofocus: true, value: params[:search], placeholder: "Location", label: false %>
        <%= f.input :date, as: :date, html5: true, value: params[:search], placeholder: "Day", label: false%>
        <div class="row no-gutters">
          <div class="col-6">
            <%= f.input :start_time, as: :time, html5: true, value: params[:search], placeholder: "Start Time", label: false %>
          </div>
          <div class="col-6">
            <%= f.input :end_time, as: :time, html5: true, value: params[:search], placeholder: "End Time", label: false %>
          </div>
        </div>
        <p id="submit-wrapper"><%= f.submit "Go!", class: "solid-btn", id: "go-solid-btn-homepage" %></p>
      <% end  %>
    </div>
  </div>
</div>
